{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "noEmit": true,
    "lib": ["DOM", "ES2021"],
    "rootDir": ".",
    "strict": true /* enable all strict type-checking options */,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
