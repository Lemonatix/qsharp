{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "outDir": "../dist",
    "declaration": true,
    "strict": true /* enable all strict type-checking options */,
    "isolatedModules": true,
    "skipLibCheck": false /* to catch errors in the wasm-bindgen generated .d.ts */,
    "types": ["node", "three"]
  }
}
